{
  "name": "hardhat-project",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "pnpm hardhat compile",
    "export:abi": "pnpm hardhat clear-abi && pnpm hardhat export-abi",
    "export:docs": "pnpm hardhat docgen && pnpm prettier --write ./docs/reference/contract-documentation/**/*.md",
    "clean": "rm -rf abis cache && pnpm hardhat clean",
    "lint:sol": "pnpm prettier **/*.sol --write && pnpm solhint contracts/**/*.sol --fix",
    "eslint": "pnpm exec eslint --ignore-path .eslintignore --ext .js,.ts .",
    "eslint:fix": "pnpm exec eslint --ignore-path .eslintignore --ext .js,.ts . --fix",
    "test": "hardhat test",
    "coverage": "pnpm hardhat coverage --solcoverjs ./.solcover.js --show-stack-traces",
    "test:coverage": "pnpm coverage",
    "test:integration": "TEST_TYPE=integration ./test/test_integration.sh",
    "test:all": "pnpm run test && pnpm run test:integration",
    "test:deploy": "hardhat deploy --network hardhat",
    "deployMEP1002Token": "pnpm hardhat deploy_MEP1002Token --network mxc_testnet",
    "generateMEP1002Token": "pnpm hardhat generate_MEP1002Token --network mxc_testnet --token-address 0x8DD0d6b0238c26C14946095181A6C9671970B7cA",
    "updateMEP1002Token": "pnpm hardhat update_MEP1002Token --network mxc_testnet",
    "sizer": "pnpm hardhat size-contracts"
  },
  "dependencies": {
    "@ericxstone/hardhat-blockscout-verify": "^1.0.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "chalk": "4.1.2",
    "h3-js": "^4.1.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.26",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "mocha": "^10.2.0"
  },
  "devDependencies": {
    "@cartesi/hardhat-verify-deployments": "^0.2.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.12",
    "chai": "^4.3.7",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.14.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.0.4"
  }
}
